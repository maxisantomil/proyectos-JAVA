package figuras;

public class ConjuntoFiguras {

	public static void main(String[] args) {
		Circulo c1 = new Circulo("Círculo 1", 60);
		Triangulo t1 = new Triangulo("Triángulo 1", 50, 20);
		Figura ff1;
		Figura f4;
		f4.getArea();
		c1.setRadio(30);
		c1.getArea();
		System.out.println(c1.getArea());
		//System.out.println(c1.getNombre());
		//System.out.println(c1.getRadio());
		
		double random = Math.random();
		if (random > 0.5) {
			f4 = new Circulo("Círculo", (int) (random * 60));
			ff1 = t1;
			System.out.println(ff1.getNombre());
		} else {
			f4 = new Triangulo("Triángulo", (int) (random * 50), (int) (random * 20));
			ff1 = c1;
			System.out.println(ff1.getNombre());
		}
		System.out.println("La figura " + f4.getNombre() + " tiene un área de: " + f4.getArea());
		System.out.println("La figura " + ff1.getNombre() + " tiene un área de: " + ff1.getArea());
	}

}
