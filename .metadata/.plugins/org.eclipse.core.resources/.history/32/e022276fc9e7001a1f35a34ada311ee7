import java.time.LocalDate;
import java.util.Date;

public class Persona {
	private String nombre;
	private String apellido;
	private int edad;
	private Date fechanacimiento;
	private int dni;
	private String sexo;
	private double peso;
	private double altura;
	
	public Persona(int dni) {
		nombre= "N";
		apellido="N";
		edad= 0;
		fechanacimiento= new Date(1/1/2000);
		this.dni=dni;
		sexo="femenino";
		peso=1;
		altura=1;
		
	}
	
	public Persona(int dni, String nombre, String apellido) {
		this.nombre= nombre ;
		this.apellido= apellido;
		edad= 0;
		fechanacimiento= new Date(1/1/2000);
		this.dni=dni;
		sexo="femenino";
		peso=1;
		altura=1;
		
	}
	
	public Persona(int dni, String nombre, String apellido, Date fecha) {
		this.nombre= nombre ;
		this.apellido= apellido;
		edad= 0;
		fechanacimiento= fecha;
		this.dni=dni;
		sexo="femenino";
		peso=1;
		altura=1;
		
	}
	
	public double CalculaIMC() {
		return peso/altura;
	}
	
	public boolean Estaenforma() {
		 double min= 18.5;
		 double max= 25;
		if ((CalculaIMC() > min )&& (CalculaIMC()< max)) {
			return true;
		}
		return false;
	}
	
	public boolean cumpleanioshoy() {
		LocalDate hoy= LocalDate.now();
		if ((fechanacimiento.getDay()) equals(hoy.getDayOfMonth())){
			return true;
		}
	}
	
	
}
