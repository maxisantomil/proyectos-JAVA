package Ejercicio1;

public class MonitoroAlarma {

	public static void main(String[] args) {
		Alarma a1= new Alarma();
		AlarmaLuminosa a2= new AlarmaLuminosa();
		
		
		Timbre t1= new Timbre("1");
		Luz l1= new Luz("blanca");

		a1.setTimbre(t1);
		a2.setLuz(l1);
		
		a2.setDetectamovimiento(true);
		a1.ActivarAlarma();
	}

}
